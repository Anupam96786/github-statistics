{
    "manifest_version": 2,
    "name": "Github Statistics",
    "version": "0.5",
    "description": "View Github statistics",
    "author": "Anupam",
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    }
}
